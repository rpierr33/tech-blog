<h2>Create New Post</h2>
<section class="form-box">
    <form class="new-post-form">
        <div>
            <label for="post-title">Title></label>
            <input type="text" id="post-title" name="post-title">
        </div>
         <div>
            <label for="description">Content></label>
            <input type="text" id="post-content" name="description">
        </div>
        <button type="submit" class="btn" id="submit"> <a href="/">Create</a></button>
    </form>

</section>

<br>

{{#if post.length}}
<h2>Your Post</h2>
<section class="form-box">
    <ul>
        {{#each post as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit{{post.id}}" class="edit-link">Edit post</a>
        </li>
        {{/each}}
    </ul>
 </section>   
 {{/if}}

 <script src="/javascript/add-post.js"></script>